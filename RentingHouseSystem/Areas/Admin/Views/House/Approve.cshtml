@using RentingHouseSystem.Core.Models.House

@model IEnumerable<HouseServiceModel>

@{
    ViewBag.Title = "Approve";
}

<h2 class="text-center">@ViewBag.Title</h2>

<hr />
<h4>House to Aprove</h4>

@if (!Model.Any())
{
    <h2 class="text-center">You have no  houses to approve!</h2>
}

<div class="row">
    @foreach (var house in Model)
    {
        @await Html.PartialAsync("~/Views/Shared/_HousePartial.cshtml", house)
    }
</div>

<h4>My Rented Houses</h4> @if (!Model.Any())
{
    <h2 class="text-center">You have no rented houses yet!</h2>
}

<div class="row">
    @foreach (var house in Model)
    {
        @await Html.PartialAsync("~/Views/Shared/_HousePartial.cshtml", house)
    }
</div>